<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_grades_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.agregar_notas">

    <Button
        android:id="@+id/btn_limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Limpiar"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/btn_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Editar"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="130dp"/>

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Eliminar"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="240dp"/>

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Buscar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/TeVi_carnet"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Carnet: "
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/TeVi_nombre"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Nombre: "
        android:textSize="20dp"
        android:layout_below="@id/TeVi_carnet"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/TeVi_nota"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Nota: "
        android:textSize="20dp"
        android:layout_below="@id/TeVi_nombre"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/EdTe_carnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Carnet          "
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"/>

    <EditText
        android:id="@+id/EdTe_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Nombre        "
        android:layout_below="@id/EdTe_carnet"
        android:layout_marginLeft="120dp"/>

    <EditText
        android:id="@+id/EdTe_nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota             "
        android:inputType="number"
        android:layout_below="@id/EdTe_nombre"
        android:layout_marginLeft="120dp"/>

</RelativeLayout>